<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BitcoinTimechainWidgets" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">?attr/background</item>
    </style>

    <style name="Theme.BitcoinTimechainWidgets.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.BitcoinTimechainWidgets.AppWidgetContainer" parent="Theme.BitcoinTimechainWidgets.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">8dp</item>
    </style>

    <style name="Theme.BitcoinTimechainWidgets.AppWidgetContainer.WeatherForecast" parent="Theme.BitcoinTimechainWidgets.AppWidgetContainer">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>